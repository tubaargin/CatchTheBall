            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="increaseScore"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/ball" />

        <ImageView
            android:id="@+id/imageView8"
